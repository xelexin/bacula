Director {
  Name = <%= @director_name %>
  Password = <%= @director_password %>
  DIRAddress = <%= @director_address %>
  DIRPort = <%= @director_port %>
  Working Directory = <%= @director_work_dir %>
  PID Directory = <%= @director_pid_dir %>
  Maximum Concurrent Jobs = <%= @director_max_jobs %>
  <% if @director_logtofile == true %>
  Messages = <%= @director_messages_name %>
  <% end %>
  QueryFile = /etc/bacula/scripts
}

Messages {
  Name = <%= @director_messages_name %>
  Console = all, !skipped, !saved
  Append = "/var/log/bacula-dir.log" = all, !skipped, !saved
}
